<!-- activity_main.xml -->
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ios_white">

    <!-- iOS-style Status Bar -->
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/ios_gray" />

    <!-- Time Widget -->
    <LinearLayout
        android:layout_below="@id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:textSize="48sp"
            android:textColor="@color/ios_black" />

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الإثنين ١ يونيو"
            android:textSize="16sp"
            android:textColor="@color/ios_gray" />

    </LinearLayout>

    <!-- Apps Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/appsRecyclerView"
        android:layout_below="@id/timeWidget"
        android:layout_above="@id/dock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp" />

    <!-- iOS-style Dock -->
    <LinearLayout
        android:id="@+id/dock"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/dock_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/dockApps"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" />

    </LinearLayout>

</RelativeLayout>
